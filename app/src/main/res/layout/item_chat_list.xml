<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageChatList"
            android:layout_margin="5dp"
            android:src="@drawable/usera"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <ImageView
            android:id="@+id/status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            tools:ignore="NotSibling" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imageChatList"
            android:gravity="center"
            android:id="@+id/fullNameChatList"
            android:text="FirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="NotSibling"
            android:layout_toEndOf="@id/imageChatList" />

        <TextView
            android:textColor="#000000"
            android:maxLines="2"
            android:id="@+id/lastMessageChatList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullNameChatList"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/imageChatList"
            android:gravity="center"
            android:text="lastMessage"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/timeStampLastMessage"
            android:layout_marginRight="3dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/fullNameChatList"
            android:gravity="end"
            android:text="just now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>